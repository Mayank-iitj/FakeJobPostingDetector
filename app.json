{
    "name": "Threat Intelligence Platform",
    "description": "Enterprise-grade cybersecurity ML system for phishing detection and malware analysis",
    "repository": "https://github.com/yourusername/threat-intel-platform",
    "logo": "https://raw.githubusercontent.com/yourusername/threat-intel-platform/main/assets/logo.png",
    "keywords": [
        "cybersecurity",
        "machine-learning",
        "threat-intelligence",
        "phishing-detection",
        "malware-analysis",
        "fastapi",
        "pytorch",
        "transformers"
    ],
    "buildpacks": [
        {
            "url": "heroku/python"
        }
    ],
    "env": {
        "SECRET_KEY": {
            "description": "Secret key for JWT token generation",
            "generator": "secret",
            "required": true
        },
        "ALLOWED_ORIGINS": {
            "description": "Comma-separated list of allowed CORS origins",
            "value": "http://localhost:3000",
            "required": false
        },
        "LOG_LEVEL": {
            "description": "Logging level (debug, info, warning, error)",
            "value": "info",
            "required": false
        },
        "RATE_LIMIT_PER_MINUTE": {
            "description": "API rate limit per minute",
            "value": "100",
            "required": false
        }
    },
    "formation": {
        "web": {
            "quantity": 1,
            "size": "basic"
        }
    },
    "addons": [
        {
            "plan": "heroku-postgresql:mini",
            "as": "DATABASE"
        },
        {
            "plan": "heroku-redis:mini",
            "as": "REDIS"
        }
    ],
    "scripts": {
        "postdeploy": "echo 'Deployment successful!'"
    }
}