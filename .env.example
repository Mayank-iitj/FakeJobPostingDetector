# Environment Configuration Template
# Copy this file to .env and fill in your values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/threatdb
DATABASE_POOL_SIZE=10

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=threat-intel
MLFLOW_ARTIFACT_ROOT=./mlruns

# Weights & Biases (optional)
WANDB_API_KEY=your-wandb-api-key
WANDB_PROJECT=threat-intel-platform
WANDB_ENTITY=your-username

# PhishTank API
PHISHTANK_API_KEY=your-phishtank-api-key
PHISHTANK_UPDATE_INTERVAL=3600

# VirusTotal (optional)
VIRUSTOTAL_API_KEY=your-virustotal-api-key

# Model Paths
PHISHING_MODEL_PATH=./models/checkpoints/phishing_vit_best.ckpt
MALWARE_MODEL_PATH=./models/checkpoints/malware_ensemble_best.ckpt

# Data Paths
DATA_DIR=./data
PHISHING_DATASET_PATH=./data/phishing
MALWARE_DATASET_PATH=./data/malware
SCREENSHOTS_PATH=./data/screenshots

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:7860,http://localhost:8501
MAX_UPLOAD_SIZE_MB=50

# Monitoring
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Model Training
BATCH_SIZE=32
LEARNING_RATE=1e-4
MAX_EPOCHS=50
PRECISION=16
ACCELERATOR=gpu
DEVICES=1

# Inference
INFERENCE_BATCH_SIZE=8
USE_ONNX=false
ONNX_PROVIDERS=CUDAExecutionProvider,CPUExecutionProvider

# Feature Flags
ENABLE_ACTIVE_LEARNING=true
ENABLE_EXPLAINABILITY=true
ENABLE_DRIFT_DETECTION=true

# Deployment
RAILWAY_STATIC_URL=
VERCEL_URL=
CUSTOM_DOMAIN=
